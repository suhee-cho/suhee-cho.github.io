---
layout: default
---

<div class="post">
  <article>
    <div class="about-layout">
      <!-- Left timeline navigation -->
      <nav class="about-sidenav" aria-label="About sections">
        <ul class="timeline-nav">
          <li>
            <a class="timeline-link" href="#about-intro">
              <span class="dot" aria-hidden="true"></span>
              <span class="timeline-label">Welcome!</span>
            </a>
          </li>
          <li>
            <a class="timeline-link" href="#about-news">
              <span class="dot" aria-hidden="true"></span>
              <span class="timeline-label">News</span>
            </a>
          </li>
          <li>
            <a class="timeline-link" href="#about-posts">
              <span class="dot" aria-hidden="true"></span>
              <span class="timeline-label">Posts</span>
            </a>
          </li>
          <li>
            <a class="timeline-link" href="#about-pubs">
              <span class="dot" aria-hidden="true"></span>
              <span class="timeline-label">Publications</span>
            </a>
          </li>
        </ul>
      </nav>

      <!-- Right content -->
      <div class="about-main">
        <div class="about-paper" aria-hidden="true"></div>

        <section id="about-intro" class="about-profile">
          
          {% if page.profile.image %}
            <div class="profile-image">
              {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
              {% if page.profile.image_circular %}
                {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
              {% else %}
                {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
              {% endif %}

              {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3 }}px, (min-width: 576px) 30vw, 95vw{% endcapture %}

              {%
                include figure.liquid
                loading="eager"
                path=profile_image_path
                class=profile_image_class
                sizes=sizes
                alt=page.profile.image
                cache_bust=true
              %}
            </div>
          {% endif %}

          <h1 class="about-title post-title">
            {% if site.title == 'blank' %}
              <span class="font-weight-bold">{{ site.first_name }}</span>{{ site.last_name }}
            {% else %}
              {{ site.title }}
            {% endif %}
          </h1>

          {% if page.profile.social %}
            <div class="social about-social">
              <div class="contact-icons">{% social_links %}</div>
              {% if site.contact_note %}
                <div class="contact-note">{{ site.contact_note }}</div>
              {% endif %}
            </div>
          {% endif %}

          {% if page.profile.more_info %}
            <div class="more-info">{{ page.profile.more_info }}</div>
          {% endif %}

          {{ content }}
        </section>

        {% if page.announcements and page.announcements.enabled %}
          <section id="about-news" class="about-section">
            <a href="{{ '/blog/' | relative_url }}" class="link"><h2 class="section-title">News :loudspeaker:</h2></a>
            {% include news.liquid limit=true %}
          </section>
        {% endif %}

        {% if page.latest_posts and page.latest_posts.enabled %}
          <section id="about-posts" class="about-section">
            <a href="{{ '/blog/' | relative_url }}" class="link"><h2 class="section-title">Blog Posts :pencil:</h2></a>
              {% include latest_posts.liquid %}
          </section>
        {% endif %}

        {% if page.selected_papers %}
          <section id="about-pubs" class="about-section">
            <h2 class="section-title">Publications :brain:</h2>
            {% include selected_papers.liquid %}
          </section>
        {% endif %}
      </div>
    </div>
  </article>
</div>
